{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Strict Task Schema (test only)",
  "description": "An HTTP client task for making web requests",
  "in": {
    "type": "object",
    "properties": {
      "url": {
        "type": "string",
        "description": "URL to fetch"
      },
      "method": {
        "type": "string",
        "enum": ["GET", "POST", "PUT", "DELETE"],
        "description": "HTTP method"
      },
      "debug": {
        "type": "boolean",
        "description": "Enable debug mode"
      }
    },
    "required": ["url"],
    "additionalProperties": false
  },
  "out": {
    "type": "object",
    "properties": {
      "ok": {
        "type": "boolean",
        "description": "Whether the request succeeded"
      },
      "body": {
        "type": "string",
        "description": "Response body"
      }
    },
    "required": ["ok"],
    "additionalProperties": false
  }
}