{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nested Object Schema (test only)",
  "description": "A task with nested object properties",
  "definitions": {
    "proxyConfig": {
      "type": "object",
      "description": "Proxy configuration",
      "properties": {
        "host": {
          "type": "string",
          "description": "Proxy host"
        },
        "port": {
          "type": "integer",
          "description": "Proxy port"
        }
      },
      "required": ["host"],
      "additionalProperties": false
    }
  },
  "in": {
    "type": "object",
    "properties": {
      "auth": {
        "type": "object",
        "description": "Authentication configuration",
        "properties": {
          "basic": {
            "type": "object",
            "description": "Basic authentication",
            "properties": {
              "username": {
                "type": "string",
                "description": "Username"
              },
              "password": {
                "type": "string",
                "description": "Password"
              }
            },
            "required": ["username", "password"],
            "additionalProperties": false
          },
          "token": {
            "type": "string",
            "description": "Token authentication"
          }
        },
        "additionalProperties": false
      },
      "freeFormObject": {
        "type": "object",
        "description": "A free-form object without defined properties"
      },
      "url": {
        "type": "string",
        "description": "Target URL"
      },
      "proxy": {
        "$ref": "#/definitions/proxyConfig"
      },
      "credentials": {
        "description": "Credentials: either a string token or an object with user/pass",
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "user": {
                "type": "string",
                "description": "Username"
              },
              "pass": {
                "type": "string",
                "description": "Password"
              }
            },
            "required": ["user", "pass"],
            "additionalProperties": false
          }
        ]
      }
    },
    "required": ["url"],
    "additionalProperties": false
  },
  "out": {
    "type": "object",
    "properties": {
      "ok": {
        "type": "boolean",
        "description": "Whether the operation succeeded"
      }
    },
    "required": ["ok"],
    "additionalProperties": false
  }
}
